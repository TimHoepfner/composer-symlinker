<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Composer Symlinker Test Suite">
            <directory suffx=".php">./tests/ComposerSymlinker</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="REGULAR_ENV_VAR" value="regular-env-var"/>
    </php>
</phpunit>
